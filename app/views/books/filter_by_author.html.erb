<h2>Filter Books by Author</h2>
<%= form_with url: filter_by_author_books_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :author, "Author Name" %>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.submit "Filter Books" %>
  </div>
<% end %>

<h3>Books by <%= params[:author] %></h3>
<% if @books.present? %>
  <ul>
    <% @books.each do |book| %>
      <li><%= book.name %> (Author: <%= book.author %>)</li>
    <% end %>
  </ul>
<% else %>
  <p>No books found by the specified author.</p>
<% end %>
<%= link_to "Back", root_path, class: "btn btn-link" %>