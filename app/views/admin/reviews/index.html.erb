<h1>All Reviews</h1>
<%= link_to "Back", root_path, class: "btn btn-link" %>
</p>
<table>
  <thead>
  <tr>
    <th>Book</th>
    <th>User</th>
    <th>Rating</th>
    <th>Content</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.book.name %></td>
      <td><%= review.user.username %></td>
      <td><%= review.rating %></td>
      <td><%= review.review %></td>
      <td>
        <%= link_to 'Edit', edit_admin_review_path(review), class: 'btn btn-primary', style: 'margin-right: 5px;' %>

        <%= button_to 'Delete', admin_review_path(review), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" , style: 'display: inline-block;'%>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>
