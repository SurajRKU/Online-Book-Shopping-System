<h1>Write a Review for <%= @book.name %></h1>

<%= form_with model: [@book, @review] do |form| %>
  <div class="form-group">
    <%= form.label :rating, "Rating (1-5)" %>
    <%= form.number_field :rating, in: 1..5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :review, "Comment" %>
    <%= form.text_area :review, class: "form-control" %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-primary" %>
<% end %>