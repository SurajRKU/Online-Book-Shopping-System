<h1>Edit Your Review for <%= @review.book.name %></h1>

<%= form_with model: @review do |form| %>
  <div class="form-group">
    <%= form.label :rating, "Rating (1-5)" %>
    <%= form.number_field :rating, in: 1..5, class: "form-control", value: @review.rating %>
  </div>

  <div class="form-group">
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :review, class: "form-control", value: @review.review %>
  </div>

  <%= form.submit "Update Review", class: "btn btn-primary" %>
<% end %>